<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="es.florida.t3maven">
	<class name="Libros" table="libros">
		<id name="id" column="id">
			<generator class="increment" />
		</id>
		<property name="titol" type="string" column="titol" />
		<property name="autor" type="string" column="autor" />
		<property name="anyNaix" type="int" column="anyNaix" />
		<property name="anyPub" type="int" column="anyPub" />
		<property name="editorial" type="string" column="editorial" />
		<property name="numPag" type="int" column="numPag" />
	</class>
</hibernate-mapping>
